{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": "s3:GetBucketAcl",
      "Principal": {
        "Service": "cloudtrail.amazonaws.com"
      },
      "Resource": {
        "Fn::Join": [
          "",
          [
            "arn:aws:s3:::",
            {
              "Ref": "CloudTrailLogsBucket"
            }
          ]
        ]
      },
      "Effect": "Allow",
      "Sid": "AWSCloudTrailAclCheck"
    },
    {
      "Action": "s3:PutObject",
      "Principal": {
        "Service": "cloudtrail.amazonaws.com"
      },
      "Resource": {
        "Join": [
          "",
          [
            "arn:aws:s3:::",
            {
              "Ref": "CloudTrailLogsBucket"
            },
            "/AWSLogs/",
            {
              "Ref": "AWS::AccountId"
            },
            "/*"
          ]
        ]
      },
      "Effect": "Allow",
      "Sid": "AWSCloudTrailWrite",
      "Condition": {
        "StringEquals": {
          "s3:x-amz-acl": "bucket-owner-full-control"
        }
      }
    }
  ]
}